{
  "name": "Secure Architecture Sandbox Testing Environment",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  "workspaceFolder": "/workspaces/Secure_Architecture_Sandbox_Testing_Environment",
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "moby": true,
      "installDockerBuildx": true,
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true,
      "upgradePackages": true,
      "username": "vscode",
      "userUid": "1000",
      "userGid": "1000"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "ppa": true,
      "version": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.flake8",
        "ms-python.black-formatter",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "ms-vscode.vscode-docker",
        "github.copilot",
        "github.copilot-chat",
        "ms-toolsai.jupyter",
        "formulahendry.code-runner",
        "streetsidesoftware.code-spell-checker",
        "ms-vscode.vscode-typescript-next",
        "oderwat.indent-rainbow",
        "mathematic.vscode-pdf",
        "tal7aouy.icons"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python3",
        "python.linting.enabled": true,
        "python.linting.flake8Enabled": true,
        "python.formatting.provider": "black",
        "python.terminal.activateEnvironment": false,
        "terminal.integrated.defaultProfile.linux": "bash",
        "files.associations": {
          "*.dockerfile": "dockerfile",
          "*.yml": "yaml",
          "*.yaml": "yaml"
        },
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
        },
        "workbench.colorTheme": "Default Dark+",
        "workbench.editorAssociations": {
          "*.md": "vscode.markdown.preview.editor"
        },
        "[markdown]": {
        "editor.defaultFormatter": "yzhang.markdown-all-in-one"
        },
            "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[jsonc]": {
            "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "json.format.enable": true,
        "terminal.integrated.fontSize": 14,
        // Suppress popup notifications in Codespaces
        "extensions.ignoreRecommendations": true,
        "security.workspace.trust.startupPrompt": "never",
        // Disable the dev container rebuild notifications
        "remote.containers.showRebuildNotification": false,
        "dev.containers.showRebuildNotification": false,
                "github.copilot.enable": {
          "python": false,
          "html": false,
          "css": false,
          "SQL": false
        },
        "chat.agent.enabled": true
      }
    }
  },
  "forwardPorts": [
    8080,
    8000,
    5000,
    3000,
    9090
  ],
  "portsAttributes": {
    "8080": {
      "label": "Sandbox Web Server",
      "onAutoForward": "notify"
    },
    "8000": {
      "label": "Python Development Server",
      "onAutoForward": "silent"
    },
    "5000": {
      "label": "Unsecure PWA",
      "onAutoForward": "notify"
    },
    "9090": {
      "label": "Vulnerable Flask App",
      "onAutoForward": "notify"
    },
    "3000": {
      "label": "Vulnerable Node.js App",
      "onAutoForward": "notify"
    }
  },
  "onCreateCommand": "mkdir -p logs && echo 'ðŸ—ï¸  Creating Secure Architecture Sandbox Testing environment...' | tee -a logs/build-process.log",
  "postCreateCommand": "mkdir -p logs && bash .devcontainer/post-create.sh 2>&1 | tee -a logs/build-process.log",
  "postStartCommand": "mkdir -p logs && bash .devcontainer/setup-docker.sh 2>&1 | tee -a logs/build-process.log",
  "postAttachCommand": "mkdir -p logs && bash .devcontainer/open-welcome.sh 2>&1 | tee -a logs/build-process.log",
  "remoteUser": "vscode",
  "containerEnv": {
    "PYTHONPATH": "/workspaces/Secure_Architecture_Sandbox_Testing_Environment/src",
    "SANDBOX_MODE": "educational",
    "FLASK_ENV": "development"
  }
}